@model IEnumerable<DTO.DTOEntity.ProductDTO>
@{
    ViewData["Title"] = "ProductIndex";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<section id="main-content">
    <section class="wrapper">
        <div class="table-agile-info">
            <div class="panel panel-default">
                <div class="panel-heading">
                    Product table
                </div>
                <a href="" class="btn btn-primary">Yeni</a>
                <div>
                    <table class="table" ui-jq="footable" ui-options='{
        "paging": {
          "enabled": true
        },
        "filtering": {
          "enabled": true
        },
        "sorting": {
          "enabled": true
        }}'>
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Foto</th>
                                <th>NumberCount</th>
                                <th>Title</th>
                                <th>Price</th>
                                <th>C_ID</th>
                                <th>U_Id</th>
                                <th>Redakte</th>
                                <th>Sil</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.ID</td>
                                    <td><img src="@item.Image" style="width:50px; height:70px;"/></td>
                                    <td>@item.NumberCount</td>
                                    <td>@item.Title</td>
                                    <td>@item.Price</td>
                                    <td>@item.CategoryID</td>
                                    <td>@item.UserID</td>
                                    <td>
                                        <a href="" class="btn btn-success">Redakte</a>
                                    </td>
                                    <td>
                                        <a href="" class="btn btn-danger">Sil</a>
                                    </td>
                                    
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </section>
    <!-- footer -->
    <div class="footer">
        <div class="wthree-copyright">
            <p>© 2017 Visitors. All rights reserved | Design by <a href="http://w3layouts.com">W3layouts</a></p>
        </div>
    </div>
    <!-- / footer -->
</section>
